<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane minHeight="600.0" minWidth="800.0" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="s.nppnha.controllers.MainController">
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="parameters" onSelectionChanged="#getParameters" text="Парметры среды">
            <content>
              <AnchorPane minHeight="200.0" minWidth="400.0" prefHeight="646.0" prefWidth="1000.0" />
            </content>
          </Tab>
          <Tab fx:id="calculations" onSelectionChanged="#getCalculations" text="Расчеты">
            <content>
              <AnchorPane minHeight="200.0" minWidth="400.0" prefHeight="646.0" prefWidth="1000.0" />
            </content>
          </Tab>
            <Tab fx:id="equipments" onSelectionChanged="#getEquipments" text="Навсное оборудование">
              <content>
                <AnchorPane minHeight="200.0" minWidth="400.0" prefHeight="646.0" prefWidth="1000.0" />
              </content>
            </Tab>
            <Tab fx:id="positions" onSelectionChanged="#getPositions" text="Позиции сделки">
              <content>
                <AnchorPane minHeight="200.0" minWidth="400.0" prefHeight="646.0" prefWidth="1000.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
