<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane minHeight="600.0" minWidth="800.0" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="s.nppnha.controllers.MainController">
   <center>
     <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
       <Tab fx:id="parameters" onSelectionChanged="#getParameters" text="Параметры среды">
         <AnchorPane minHeight="200.0" minWidth="400.0" prefHeight="646.0" prefWidth="1000.0"/>
       </Tab>
       <Tab fx:id="calculations" onSelectionChanged="#getCalculations" text="Расчеты">
         <AnchorPane minHeight="200.0" minWidth="400.0" prefHeight="646.0" prefWidth="1000.0"/>
       </Tab>
       <Tab fx:id="equipments" onSelectionChanged="#getEquipments" text="Навесное оборудование">
         <AnchorPane minHeight="200.0" minWidth="400.0" prefHeight="646.0" prefWidth="1000.0"/>
       </Tab>
       <Tab fx:id="positions" onSelectionChanged="#getPositions" text="Позиции сделки">
         <AnchorPane minHeight="200.0" minWidth="400.0" prefHeight="646.0" prefWidth="1000.0"/>
       </Tab>
     </TabPane>
   </center>
   <top>
     <MenuBar BorderPane.alignment="CENTER">
       <Menu mnemonicParsing="false" text="File">
         <MenuItem mnemonicParsing="false" text="Close"/>
       </Menu>
       <Menu mnemonicParsing="false" text="Edit">
         <MenuItem mnemonicParsing="false" text="Delete"/>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <MenuItem mnemonicParsing="false" text="About"/>
       </Menu>
     </MenuBar>
   </top>
</BorderPane>
